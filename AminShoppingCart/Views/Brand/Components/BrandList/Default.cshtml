@model List<AminShoppingCart.Models.ViewModels.BrandViewModel>

<div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Brand Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "GetDetailVC", "Brand", new { id = item.Id }, new { @class = "btn btn-primary" })
                        <a href="@Url.Action("DeleteVC","Brand",new { id= item.Id})" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>